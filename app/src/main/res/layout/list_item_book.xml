<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/books_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_marginBottom="10dp"
    android:height="200dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_weight="0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:text="@string/bookTitlePlaceholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:ellipsize="end"
            android:gravity="center"
            android:id="@+id/bookTitleTextView"
            android:layout_weight="2" />
        <TextView
            android:text="@string/bookAuthorPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="12sp"
            android:gravity="center"
            android:id="@+id/bookAuthorTextView"
            android:layout_weight="1" />

    </LinearLayout>

    <TextView
        android:text=""
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/bookCoverImageUrlTextView"/>

    <TextView
        android:text=""
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/bookDescriptionTextView"/>

    <TextView
        android:text=""
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/bookPublisherTextView"/>

    <TextView
        android:text=""
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:id="@+id/bookIsbnTextView"/>

</LinearLayout>